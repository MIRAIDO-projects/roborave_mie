<section id="banners" class="py-20 bg-swiss-white border-t-4 border-black">
    <div class="max-w-screen-xl mx-auto px-6">
        <h3
            class="text-xl font-bold uppercase tracking-widest text-slate-400 mb-10 text-center"
        >
            Related Organizations
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- RoboRAVE International -->
            <a
                href="https://roborave.org"
                target="_blank"
                rel="noopener noreferrer"
                class="group block"
            >
                <div
                    class="bg-white border-4 border-black p-8 rounded-2xl shadow-hard hover:shadow-hard-xl transition-all duration-300 flex items-center justify-center min-h-[120px] relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 bg-blue-50 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
                    >
                    </div>
                    <img
                        src="/images/roborave-international.png"
                        alt="RoboRAVE International"
                        class="relative z-10 w-full h-auto max-h-[80px] object-contain"
                    />
                </div>
            </a>

            <!-- RoboRAVE Osaka -->
            <a
                href="https://roborave-osaka.org"
                target="_blank"
                rel="noopener noreferrer"
                class="group block"
            >
                <div
                    class="bg-white border-4 border-black p-8 rounded-2xl shadow-hard hover:shadow-hard-xl transition-all duration-300 flex items-center justify-center min-h-[120px] relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 bg-swiss-red/10 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
                    >
                    </div>
                    <span
                        class="relative z-10 font-black text-xl text-slate-800 group-hover:text-swiss-red transition-colors uppercase text-center"
                    >
                        RoboRAVE<br />Osaka
                    </span>
                </div>
            </a>

            <!-- Daisen Denshi -->
            <a
                href="https://www.daisendenshi.com"
                target="_blank"
                rel="noopener noreferrer"
                class="group block"
            >
                <div
                    class="bg-white border-4 border-black p-8 rounded-2xl shadow-hard hover:shadow-hard-xl transition-all duration-300 flex items-center justify-center min-h-[120px] relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 bg-green-50 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
                    >
                    </div>
                    <span
                        class="relative z-10 font-black text-xl text-slate-800 group-hover:text-green-600 transition-colors uppercase text-center"
                    >
                        Daisen Electronics<br />Ind. Corp.
                    </span>
                </div>
            </a>
        </div>
    </div>
</section>
