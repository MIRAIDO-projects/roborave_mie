---
import Layout from "../layouts/Layout.astro";
---

<Layout title="送信完了 | RoboRave Mie">
    <main
        class="relative min-h-screen bg-white flex items-center justify-center overflow-hidden"
    >
        <!-- Abstract Background Shapes -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div
                class="absolute top-[-10%] right-[-5%] w-[500px] h-[500px] bg-blue-100 rounded-full blur-3xl opacity-60"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-5%] w-[400px] h-[400px] bg-indigo-100 rounded-full blur-3xl opacity-60"
            >
            </div>
        </div>

        <div class="relative z-10 text-center px-6 max-w-2xl mx-auto">
            <div class="mb-12">
                <span class="text-6xl md:text-8xl block mb-6 animate-bounce"
                    >📨</span
                >
                <h1
                    class="text-4xl md:text-6xl font-black text-slate-900 mb-6 tracking-tight leading-tight"
                >
                    MESSAGE<br />SENT
                </h1>
                <p class="text-xl md:text-2xl text-slate-600 font-medium">
                    お問い合わせありがとうございます。<br />
                    担当者よりご連絡いたします。
                </p>
            </div>

            <a
                href="/"
                class="inline-block py-4 px-10 bg-slate-900 text-white font-bold text-xl rounded-2xl shadow-xl hover:bg-blue-600 hover:scale-105 transition-all duration-300 transform"
            >
                Back to Home
            </a>
        </div>
    </main>
</Layout>
